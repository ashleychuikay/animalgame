journal = {Frontiers in Psychology},
keywords = {Child-directed speech,Frequent frames,Speech segmentation,Statistical learning,Word learning},
pmid = {23162487},
title = {{Statistical speech segmentation and word learning in parallel: Scaffolding from child-directed speech}},
volume = {3},
year = {2012}
}
