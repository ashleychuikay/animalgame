doi = {10.3389/fpsyg.2012.00374},
file = {:C$\backslash$:/Users/Ashley/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Yurovsky, Yu, Smith - 2012 - Statistical speech segmentation and word learning in parallel Scaffolding from child-directed speech.pdf:pdf},
